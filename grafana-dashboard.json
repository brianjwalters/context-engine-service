{
  "dashboard": {
    "title": "Context Engine Service - Performance Dashboard",
    "tags": ["luris", "context-engine", "microservices"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Request Rate (req/s)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(context_engine_requests_total[5m]))",
            "legendFormat": "Total Requests/sec",
            "refId": "A"
          },
          {
            "expr": "sum by (endpoint) (rate(context_engine_requests_total[5m]))",
            "legendFormat": "{{endpoint}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"}
        ],
        "alert": {
          "name": "High Request Rate",
          "conditions": [
            {
              "evaluator": {"params": [100], "type": "gt"},
              "query": {"params": ["A", "5m", "now"]},
              "type": "query"
            }
          ]
        }
      },
      {
        "id": 2,
        "title": "P95 Request Latency",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum by (le, endpoint) (rate(context_engine_request_latency_seconds_bucket[5m])))",
            "legendFormat": "P95 {{endpoint}}",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.99, sum by (le) (rate(context_engine_request_latency_seconds_bucket[5m])))",
            "legendFormat": "P99 Overall",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Latency"}
        ],
        "thresholds": [
          {"value": 2.0, "colorMode": "critical", "fill": true, "line": true}
        ],
        "alert": {
          "name": "High P95 Latency",
          "conditions": [
            {
              "evaluator": {"params": [3.0], "type": "gt"},
              "query": {"params": ["A", "5m", "now"]},
              "type": "query"
            }
          ]
        }
      },
      {
        "id": 3,
        "title": "Top Endpoints by Request Count",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "topk(10, sum by (endpoint) (rate(context_engine_requests_total[5m])))",
            "format": "table",
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {},
              "renameByName": {
                "endpoint": "Endpoint",
                "Value": "Requests/sec"
              }
            }
          }
        ]
      },
      {
        "id": 4,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "sum(rate(context_engine_requests_total{status=~\"5..\"}[5m])) / sum(rate(context_engine_requests_total[5m]))",
            "legendFormat": "Error Rate %",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percentunit", "label": "Error Rate"}
        ],
        "thresholds": [
          {"value": 0.01, "colorMode": "warning"},
          {"value": 0.05, "colorMode": "critical"}
        ],
        "alert": {
          "name": "High Error Rate",
          "conditions": [
            {
              "evaluator": {"params": [0.05], "type": "gt"},
              "query": {"params": ["A", "5m", "now"]},
              "type": "query"
            }
          ]
        }
      },
      {
        "id": 5,
        "title": "Service Status",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "up{job=\"context-engine\"}",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value",
          "textMode": "value_and_name"
        },
        "mappings": [
          {"value": 1, "text": "UP", "color": "green"},
          {"value": 0, "text": "DOWN", "color": "red"}
        ]
      },
      {
        "id": 6,
        "title": "Request Count (24h)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 16},
        "targets": [
          {
            "expr": "sum(increase(context_engine_requests_total[24h]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        }
      },
      {
        "id": 7,
        "title": "Average Latency",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "avg(rate(context_engine_request_latency_seconds_sum[5m]) / rate(context_engine_request_latency_seconds_count[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "unit": "s"
        },
        "thresholds": [
          {"value": 0, "color": "green"},
          {"value": 1.0, "color": "yellow"},
          {"value": 2.0, "color": "red"}
        ]
      },
      {
        "id": 8,
        "title": "Error Count (1h)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 16},
        "targets": [
          {
            "expr": "sum(increase(context_engine_requests_total{status=~\"5..\"}[1h]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "thresholds": [
          {"value": 0, "color": "green"},
          {"value": 10, "color": "yellow"},
          {"value": 100, "color": "red"}
        ]
      },
      {
        "id": 9,
        "title": "Request Distribution by Endpoint",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "sum by (endpoint) (rate(context_engine_requests_total[5m]))",
            "legendFormat": "{{endpoint}}",
            "refId": "A"
          }
        ],
        "options": {
          "pieType": "donut",
          "displayLabels": ["name", "percent"]
        }
      },
      {
        "id": 10,
        "title": "Latency Heatmap",
        "type": "heatmap",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "sum(increase(context_engine_request_latency_seconds_bucket[1m])) by (le)",
            "format": "heatmap",
            "refId": "A"
          }
        ],
        "options": {
          "color": {
            "mode": "spectrum",
            "scheme": "Spectral"
          }
        }
      }
    ],
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "enable": true,
          "iconColor": "blue",
          "tags": ["deployment"]
        }
      ]
    },
    "templating": {
      "list": [
        {
          "name": "endpoint",
          "label": "Endpoint",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(context_engine_requests_total, endpoint)",
          "multi": true,
          "includeAll": true
        }
      ]
    }
  },
  "overwrite": true
}
